@using FptJobMatch.Models.ViewModels;
@model JobAppVM
<body>
<div class="theme-layout" id="scrollup">
	<section class="overlape">
		<div class="block no-padding">

			<div data-velocity="-.1" style="background: url(images/mslider1.jpg) repeat scroll 50% 422.28px transparent;" class="parallax scrolly-invisible no-parallax"></div><!-- PARALLAX BACKGROUND IMAGE -->
			<div class="container fluid">
				<div class="row">
					<div class="col-lg-12">
						<div class="inner-header">
							<h3>@Model.Job.User.Name</h3>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section>
		<div class="block">
			<div class="container">
				<div class="row">
					 <div class="col-lg-8 column">
						 <div class="job-single-sec">
							 <div class="job-single-head2">
								 <div class="job-title2"><h3>@Model.Job.JobTitle</h3><span class="job-is ft">@Model.Job.JobType</span><i class="la la-heart-o"></i></div>
								 <ul class="tags-jobs">
									 <li><i class="la la-map-marker"></i> @Model.Job.City, @Model.Job.Country</li>
									 <li><i class="la la-money"></i> Monthly Salary : <span>@Model.Job.OfferdSalary</span></li>
									 <li><i class="la la-calendar-o"></i>Deadline: @Model.Job.EndDay</li>
								 </ul>
							 </div><!-- Job Head -->
							 <div class="job-details">
								 <h3>Job Description</h3>
								 <p>@Model.Job.Description</p>
							 </div>
							 <div class="job-overview">
								 <h3>Job Overview</h3>
								 <ul>
									 <li><i class="la la-money"></i><h3>Offerd Salary</h3><span>@Model.Job.OfferdSalary</span></li>
									 <li><i class="la la-mars-double"></i><h3>Gender</h3><span>@Model.Job.Gender</span></li>
									 <li><i class="la la-thumb-tack"></i><h3>Career Level</h3><span>@Model.Job.CareerLevel</span></li>
									 <li><i class="la la-shield"></i><h3>Experience</h3><span>@Model.Job.Experience Years</span></li>
									 <li><i class="la la-line-chart "></i><h3>Qualification</h3><span>@Model.Job.Qualification</span></li>
								 </ul>
							 </div><!-- Job Overview -->
							 <div class="share-bar">
								 <span>Share</span><a href="#" title="" class="share-fb"><i class="fa fa-facebook"></i></a><a href="#" title="" class="share-twitter"><i class="fa fa-twitter"></i></a>
							 </div>
						 </div>
					 </div>
					 <div class="col-lg-4 column">
						 <div class="job-single-head style2">
							 <div class="job-thumb"> <img src="@Model.Job.User.ImageUrl" alt=""> </div>
							 <div class="job-head-info">
								 <h4>@Model.Job.User.Name</h4>
								 <span>@Model.Job.User.City, @Model.Job.User.Country</span>
								 <p><i class="la la-unlink"></i> www.@Model.Job.User.Name. com</p>
								 <p><i class="la la-phone"></i> @Model.Job.User.PhoneNumber</p>
								 <p><i class="la la-envelope-o"></i> @Model.Job.User.Email</p>
							 </div>
							 @if(User.IsInRole("Candidate"))
							 {
									                bool flag = false;
														@*<input hidden asp-for="@Model.Application.Id"/>
														<input hidden asp-for="@Model.Application.JobId" type="text" value="@Model.Job.Id">
														<input hidden asp-for="@Model.Application.UserId" type="text" value="@ViewBag.UserId">
														<input hidden asp-for="@Model.Application.AppliedTime" type="text" value="wait">
														<input hidden asp-for="@Model.Application.Status" type="text" value="Processing">*@
														@foreach (var application in Model.MyListApplication)
														{

															if (application.UserId == ViewBag.UserId)
															{
																if (application.JobId == Model.Job.Id)
																{
																	flag = true;
																	break;
																}
															}
														}
														@if (flag)
														{
																<a class="apply-job-btn"><i class="la la-paper-plane"></i>Applied</a>
														}
														else
														{
																<a asp-area="Candidate" asp-controller="Apply" asp-action="ApplyJob" asp-route-id="@Model.Job.Id" asp-route-data="@ViewBag.UserId" class="apply-job-btn"><i class="la la-paper-plane"></i>Apply for job</a>
														}

							 }
							 <a asp-controller="Job" asp-action="Index" class="viewall-jobs">View all Jobs</a>
						 </div><!-- Job Head -->
					 </div>
				</div>
			</div>
		</div>
	</section>
</div>
</body>