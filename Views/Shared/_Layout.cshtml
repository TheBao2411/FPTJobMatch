						{
							<a asp-area="Employer" asp-controller="Job" asp-action="Postnew" class="post-job-btn">Post
								Jobs</a>
						}
						<partial name="_LoginPartial" />
					</div><!-- Btn Extras -->
					<nav>
						<ul>
							<li class="menu-item-has-children">
