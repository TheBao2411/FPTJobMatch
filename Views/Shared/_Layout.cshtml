								<li class="menu-item-has-children">
									<a href="#" title="">Employer</a>
									<ul>
										<li><a asp-area="Employer" asp-controller="Job" asp-action="ManagerJob">Employer Job
												Manager</a></li>
										<li><a asp-area="Employer" asp-controller="Job" asp-action="Postnew">Employer Post
												New</a></li>
										<li><a asp-area="Employer" asp-controller="Categories" asp-action="Index">Request
												Category</a></li>
									</ul>
								</li>
							}
							@if (User.IsInRole("Candidate"))

							{
								<li class="menu-item-has-children">
									<a href="#" title="">Candidates</a>
									<ul>
										<li><a asp-area="Candidate" asp-controller="Profile" asp-action="Resume">Candidates
												Resume</a></li>
										<li><a asp-area="Candidate" asp-controller="Profile" asp-action="Profile"
												asp-route-data="@UserManager.GetUserId(User)">Candidates Profile</a></li>
										<li><a href="candidates_single.html" title="">Candidates Shortlist</a></li>
										<li><a asp-area="Candidate" asp-controller="Apply" asp-action="Index">Applied
												Jobs</a></li>
									</ul>
								</li>
							}
							@if (User.IsInRole("Admin"))

							{
								<li class="menu-item-has-children">
									<a href="#" title="">Admin</a>
									<ul>
										<li><a asp-area="Admin" asp-controller="Categories" asp-action="Index">Manager
												Categories</a></li>
										<li><a asp-area="Admin" asp-controller="Account" asp-action="Index">Manager
												Account</a></li>
									</ul>
								</li>
							}
							<li class="menu-item-has-children">
								<a asp-area="User" asp-controller="Job" asp-action="Index">Job</a>
							</li>
							<li class="menu-item-has-children">
								<a href="#" title="">Pages</a>
								<ul>
									<li><a href="#" title="">About Us</a></li>
									<li><a href="#" title="">404 Error</a></li>
									<li><a href="#" title="">Contact Us</a></li>
									<li><a href="#" title="">FAQ's</a></li>
									<li><a href="#" title="">How it works</a></li>
									<li><a href="#" title="">Login</a></li>
									<li><a href="#" title="">Pricing Plans</a></li>
									<li><a href="#" title="">Register</a></li>
									<li><a href="#" title="">Terms &amp; Condition</a></li>
								</ul>
							</li>
						</ul>
					</nav><!-- Menus -->
				</div>
			</div>
		</header>
		<div>
		</div>
		<main>
			@RenderBody()
		</main>
	</div>
	<script src="~/js/jquery.min.js" type="text/javascript"></script>
	<script src="~/js/modernizr.js" type="text/javascript"></script>
	<script src="~/js/script.js" type="text/javascript"></script>
	<script src="~/js/bootstrap.min.js" type="text/javascript"></script>
	<script src="~/js/wow.min.js" type="text/javascript"></script>
	<script src="~/js/slick.min.js" type="text/javascript"></script>
	<script src="~/js/parallax.js" type="text/javascript"></script>
	<script src="~/js/select-chosen.js" type="text/javascript"></script>
	<script src="~/js/jquery.scrollbar.min.js" type="text/javascript"></script>
	<script src="~/js/tag.js" type="text/javascript"></script>
	<script src="~/js/maps3.js" type="text/javascript"></script>
	<script
		src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAAz77U5XQuEME6TpftaMdX0bBelQxXRlM&amp;callback=initMap"
		type="text/javascript"></script>


	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>